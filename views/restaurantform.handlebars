<article>
    <form method="POST" action="/createRestaurant">
        <div class="input-field">
            <label>Restaurant Name:</label>
            <input type="text" name="restaurantname" size="50" placeholder="Marathon Deli...">
        </div>
        <div class="input-field">
            <label>Description:</label>
            <textarea type="text" size="50" name="description" rows="5" placeholder="Greek/American fast casual..."></textarea>
        </div>
        <div class="input-field">
            <label>Cuisine:</label>
            <input type="text" name="cuisine" size="50" placeholder="Greek/American">
        </div>
        <div class="input-field">
            <label>Price Range:</label>
            <input type="text" name="pricerange" size="50" placeholder="1, 2, or 3...">
        </div>
        <button class="testbutton" type="submit">Submit</button>
    </form>
</article>